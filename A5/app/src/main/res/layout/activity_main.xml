<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="itp341.yang.chingchuan.a5.MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:text="Bill Amount"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="118dp"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_margin="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="22dp"
        android:maxLength="7"
        android:ems="10"
        android:id="@+id/editText" />


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Percentage"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="118dp"
            android:id="@+id/percentageTextView"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_margin="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"></TextView>
        <TextView
            android:text="15%"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/percentTextView"
            android:textSize="22dp"
            android:layout_margin="8dp"/>

        <SeekBar
            android:layout_width="140dp"
            android:layout_height="32dp"
            android:id="@+id/seekBar"
            android:max="30"
            android:progress="15"
            android:layout_margin="8dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Tip"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="118dp"
            android:id="@+id/TipsTextView"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_margin="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"></TextView>
        <TextView
            android:text=""
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="118dp"
            android:id="@+id/TipAmountTextView"
            android:textSize="22dp"
            android:layout_margin="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"></TextView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Total"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="118dp"
            android:id="@+id/TotalTextView"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_margin="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"></TextView>
        <TextView
            android:text=""
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="118dp"
            android:id="@+id/TotalAmountTextView"
            android:textSize="22dp"
            android:layout_margin="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line"
            android:text="_____________________________"
            android:textSize="22dp"
            android:layout_margin="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"></TextView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Spilt Bill?"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="118dp"
            android:id="@+id/SpiltTextView"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_margin="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"></TextView>
        <Spinner
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:entries = "@array/label_array"
            android:id="@+id/spinner" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text=""
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="118dp"
            android:id="@+id/PersonTextView"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_margin="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"></TextView>
        <TextView
            android:text=""
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="118dp"
            android:id="@+id/PersonAmountTextView"
            android:textSize="22dp"
            android:layout_margin="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"></TextView>
    </LinearLayout>


</LinearLayout>
